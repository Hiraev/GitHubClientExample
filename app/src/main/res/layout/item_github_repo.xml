<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/global_medium_margin"
    android:layout_marginTop="@dimen/global_medium_margin"
    android:layout_marginEnd="@dimen/global_medium_margin"
    android:background="@drawable/bg_ripple_gray_round_corners_4dp">

    <ImageView
        android:id="@+id/item_github_repo_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/global_medium_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_color_accent_circle_50dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_github_repo_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_medium_margin"
        android:layout_marginTop="@dimen/global_medium_margin"
        android:layout_marginEnd="@dimen/global_medium_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance15M"
        app:layout_constraintBottom_toTopOf="@id/item_github_repo_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_github_repo_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Repo name njnj nk nkdnk nkdn kdfn dn ndk nkdfn ndf ndfn knnn" />

    <TextView
        android:id="@+id/item_github_repo_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_medium_margin"
        android:layout_marginTop="@dimen/global_medium_margin"
        android:layout_marginEnd="@dimen/global_medium_margin"
        android:layout_marginBottom="@dimen/global_medium_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance15R"
        android:textColor="@color/text_color_gray_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_github_repo_logo"
        app:layout_constraintTop_toBottomOf="@id/item_github_repo_full_name"
        tools:text="Author name nnnnnn mkndnfn kdnk nkndfn nd nkdfn kn nkd nkdn ndfk ndkfn kndkn f" />

</androidx.constraintlayout.widget.ConstraintLayout>
